# uBO Imports
# MP4Upload uBO Injects
mp4upload.com##+js(popads-dummy)
mp4upload.com##+js(acis, decodeURI, decodeURIComponent)
mp4upload.com##+js(aeld, /^(?:click|mousedown|mousemove|touchstart|touchend|touchmove)$/, system.popunder)

# This filter stops Mp4Upload from disabling the right-click context menu.
mp4upload.com##+js(addEventListener-defuser.js, contextmenu)


#MyCloud uBO Injects
mcloud.to##+js(acis, Math, zfgloaded)


# HydraX Injects
hydrax.net##+js(aopr, AaDetector)
hydrax.net##+js(nostif, debugger)
